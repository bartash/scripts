(set -o igncr) 2>/dev/null && set -o igncr; # comment is needed

cd /cygdrive
echo backup_external ...

SOURCE=g
BACK=f


if [ ! -d ${BACK} ]; then
	echo Could not find ${BACK} volume
	exit 1
else
	echo found ${BACK}
fi

rsync -av --exclude '*.lnk' --delete  --no-owner --no-group  g/data f/backup

rsync -av --exclude '*.lnk' --delete  --no-owner --no-group  f/andrew_itunes g

rsync -av --exclude '*.lnk' --delete --no-owner --no-group g/dvd f

rsync -av --exclude '*.lnk' --delete --no-owner --no-group g/downloads f






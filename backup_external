(set -o igncr) 2>/dev/null && set -o igncr; # comment is needed

cd /cygdrive
echo backup_external ...

SOURCE=g
BACK=h

rsync  -rltDv --exclude '*.lnk' --delete --modify-window=5  $SOURCE/data $BACK/backup

rsync -av --exclude '*.lnk' --delete  --no-owner --no-group  $BACK/andrew_itunes $SOURCE

rsync  -rltDv --exclude '*.lnk' --delete --modify-window=5 $SOURCE/dvd $BACK

rsync  -rltDv --exclude '*.lnk' --delete --modify-window=5  $SOURCE/downloads $BACK





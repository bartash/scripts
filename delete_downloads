# delete downloads

set -e
DIR=/cygdrive/g/downloads/newvuze

if [ "$#" -lt 1 ]
then
 echo "usage: $0 number_to_delete [dir]"
 exit 1
fi
NUM=$1

if [ "$#" -eq 2 ]
then
    DIR=$2
fi
echo "DIR=$DIR"

if [ ! -d "$DIR" ]
then
    echo "no directory $DIR"
    exit 1
fi

ls -t | tail -${NUM} | while read file
do
	echo file is $file
	rm -rf "$file"
done


